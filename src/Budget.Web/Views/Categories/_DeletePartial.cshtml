@model BudgetViewModel

<div id="delete-category-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">
                    Delete Category
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="row mb-3">
                    <div class="col">
                        <label class="form-label" asp-for="Category.Name"></label>
                        <input class="form-control" readonly asp-for="Category.Name" id="Category_Name" />
                    </div>
                </div>
                
                <form asp-action="Delete">
                    <input type="hidden" name="id" asp-for="Category.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a button type="button" class="btn btn-secondary" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
