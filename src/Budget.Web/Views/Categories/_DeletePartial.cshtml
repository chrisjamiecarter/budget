@model CategoryViewModel

<div class="d-flex flex-column align-items-center mb-3">
    <span class="fw-bold text-uppercase text-danger">
        Warning!
    </span>
    <span class="small">
        Deleting a <strong>Category</strong> will also delete all associated <strong>Transactions</strong>!
    </span>
</div>

<div class="row mb-3">
    <div class="col-2 d-flex align-items-center">
        <label asp-for="Name" class="form-label mb-0"></label>
    </div>
    <div class="col-10">
        <input asp-for="Name" class="form-control" readonly />
    </div>
</div>
                
<form asp-action="Delete">
    <input type="hidden" name="id" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
</form>
